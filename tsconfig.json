{
  "compilerOptions": {
    "target": "es2021",
    "lib": ["es2021", "dom"],
    "strict": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["*"]
    }
  },
  "include": ["tests/**/*.ts"],
  "exclude": ["node_modules"]
}
